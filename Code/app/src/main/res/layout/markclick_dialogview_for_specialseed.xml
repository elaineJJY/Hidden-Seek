<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_marker_for_specialseed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Special Seed founded!"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/description_markerr_for_specialseed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descriptor_marker_for_sepcialseed"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/distance_markerr_for_specialseed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance unkown"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/navigate_markerr_for_specialseed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:drawableLeft="@drawable/ic_baseline_navigation_24"
        android:text="Navigate"
        android:textColor="@color/white" />
</LinearLayout>